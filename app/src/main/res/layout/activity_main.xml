<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/activity_background">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bmi"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/anton"
        android:text="Índice de Massa Corporal"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/edit_peso"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/white"
        android:hint="Qual o seu Peso?"
        android:textColorHint="#CDCDCD"
        android:textSize="21sp"
        android:inputType="number"
        android:drawableStart="@drawable/peso"
        android:drawableTint="@color/white"
        android:drawablePadding="16dp"
        />

    <EditText
        android:id="@+id/edit_altura"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/white"
        android:hint="Qual a sua Altura?"
        android:textColorHint="#CDCDCD"
        android:textSize="21sp"
        android:inputType="numberDecimal"
        android:drawableStart="@drawable/altura"
        android:drawableTint="@color/white"
        android:drawablePadding="16dp"
        />

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:padding="15dp"
        android:textAllCaps="false"
        android:background="@drawable/edit_button_background"
        android:textColor="#CDCDCD"
        />
    <TextView
        android:id="@+id/text_view_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.5"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="50sp"
        android:padding="40dp"
        android:background="@drawable/edit_resultado_background"
        android:textColor="@color/white"
        />
</LinearLayout>